<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Ambulance Service -->
    <record id="acs_acs_ambulance_service_form" model="ir.ui.view">
        <field name="name">acs.ambulance.service.form</field>
        <field name="model">acs.ambulance.service</field>
        <field name="arch" type="xml">
            <form string="Ambulance Service">
                <header>
                    <button name="action_confirm" invisible="state!='draft'" class="oe_highlight" string="Confirm" type="object"/>
                    <button name="action_done" invisible="state!='confirm'" class="oe_highlight" string="Done" type="object"/>
                    <button name="action_create_invoice" string="Create Invoice" type="object" invisible="state!='to_invoice'" class="oe_highlight" groups="account.group_account_invoice"/>
                    <button name="view_invoice" string="View Invoice" type="object" invisible="not invoice_id" class="oe_highlight" groups="account.group_account_invoice"/>
                    <button name="action_cancel" invisible="state!='draft'" string="Cancel" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done" statusbar_colors='{"draft":"blue","cancel":"red"}'/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id" readonly="state in ('to_invoice','cancel','done')"/>
                            <label for="date"/>
                            <div name="date">
                                <div>
                                    <field name="date" class="oe_inline" readonly="state in ('to_invoice','cancel','done')"/>-<field name="date_to" class="oe_inline" readonly="state in ('to_invoice','cancel','done')"/>
                                </div>
                            </div>
                            <field name="user_id" readonly="state in ('to_invoice','cancel','done')"/>
                            <field name="department_id" readonly="state in ('to_invoice','cancel','done')" groups="acs_hms.group_allow_multi_department"/>
                            <field name="invoice_id" invisible="1"/>
                            <field name="acs_ambulance_invoicing" invisible="1"/>
                        </group>
                        <group>
                            <field name="pick_location" readonly="state in ('to_invoice','cancel','done')"/>
                            <field name="drop_location" readonly="state in ('to_invoice','cancel','done')"/>
                            <field name="company_id" readonly="state in ('to_invoice','cancel','done')" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                    </group>

                    <separator string="Vehicle"/>
                    <group>
                        <group>
                            <field name="vehicle_id" readonly="state in ('to_invoice','cancel','done')"/>
                            <field name="odometer_start" readonly="state in ('to_invoice','cancel','done')"/>
                        </group>
                        <group>
                            <field name="driver_id" readonly="state in ('to_invoice','cancel','done')"/>
                            <field name="odometer_stop" readonly="state in ('to_invoice','cancel','done')"/>
                        </group>
                    </group>

                    <separator string="Service Charge" invisible="not acs_ambulance_invoicing"/>
                    <group invisible="not acs_ambulance_invoicing">
                        <group>
                            <field name="service_product_id" readonly="state in ('to_invoice','cancel','done')"/>
                            <label for="invoice_exempt"/>
                            <div name='invoice_exemption'>
                                <field name='invoice_exempt' class="oe_inline" nolabel="1" readonly="state in ('to_invoice','cancel','done')"/>
                                <button name="acs_apply_invoice_exemption" string="Apply/Remove" type="object" class="oe_inline fa fa-arrow-right oe_link" invisible="not invoice_id" groups="acs_hms_base.group_acs_invoice_exemption"/>
                            </div>
                        </group>
                        <group>
                            <field name="price" invisible="invoice_exempt" readonly="state in ('to_invoice','cancel','done')"/>
                        </group>
                    </group>
                    <field name="remark" nolabel="1" placeholder="Notes..."
                       />
                </sheet>
                <chatter>
    <field name="message_ids"/>
    <field name="activity_ids"/>
</chatter>
            </form>
        </field>
    </record>

    <record id="acs_acs_ambulance_service_tree" model="ir.ui.view">
        <field name="name">acs.ambulance.service.tree</field>
        <field name="model">acs.ambulance.service</field>
        <field name="arch" type="xml">
            <list string="Ambulance Service">
                <field name="name"/>
                <field name="date"/>
                <field name="state" decoration-info="state=='draft'" decoration-danger="state=='cancel'" decoration-success="state=='done'" decoration-primary="state=='to_invoice'" decoration-warning="state=='confirm'" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="acs_acs_ambulance_service_calendar" model="ir.ui.view">
        <field name="name">acs.ambulance.service.calendar</field>
        <field name="model">acs.ambulance.service</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar string="Ambulance Service" color="driver_id" date_start="date" date_stop="date_to">
                <field name="driver_id"/>
                <field name="user_id"/>
                <field name="patient_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <record id="acs_acs_ambulance_service_pivot" model="ir.ui.view">
        <field name="name">acs.ambulance.service.pivot</field>
        <field name="model">acs.ambulance.service</field>
        <field name="arch" type="xml">
            <pivot string="Ambulance Service">
                <field name="date" type="row"/>
                <field name="driver_id" type="row"/>
                <field name="user_id" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="acs_acs_amvulance_service_search" model="ir.ui.view">
        <field name="name">acs.ambulance.service.search</field>
        <field name="model">acs.ambulance.service</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="company_id"/>
                <field name="pick_location"/>
                <field name="drop_location"/>
                <field name="driver_id"/>
                <group expand="0" string="Group By...">
                    <filter string="Company" name="company_group" domain="[]" context="{'group_by':'company_id'}"/>
                    <filter string="Driver" name="driver_group" domain="[]" context="{'group_by':'driver_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_acs_ambulance_service" model="ir.actions.act_window">
        <field name="name">Ambulance Service</field>
        <field name="res_model">acs.ambulance.service</field>
        <field name="view_mode">list,form,calendar,pivot,search</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a Ambulance Service.
            </p>
        </field>
    </record>

</odoo>