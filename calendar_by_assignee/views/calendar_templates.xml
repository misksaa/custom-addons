<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="day_calendar_template" name="Day Calendar Template">
        <t t-name="CalendarByAssignee.DayView">
            <div class="o_day_calendar_container h-100 d-flex flex-column">
                <!-- Header -->
                <div class="o_calendar_header d-flex justify-content-between align-items-center p-3 border-bottom bg-light">
                    <div class="d-flex align-items-center">
                        <h4 class="mb-0 fw-bold text-primary">
                            <t t-esc="state.currentDateLabel"/>
                        </h4>
                        <div class="ms-3 btn-group">
                            <button type="button" class="btn btn-outline-secondary btn-sm" t-on-click="onPreviousDay">
                                <i class="fa fa-chevron-left"/> Previous
                            </button>
                            <button type="button" class="btn btn-outline-primary btn-sm" t-on-click="onToday">
                                Today
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" t-on-click="onNextDay">
                                Next <i class="fa fa-chevron-right"/>
                            </button>
                        </div>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-primary btn-sm" t-on-click="onSwitchToWeekView">
                            <i class="fa fa-calendar-week"/> Week View
                        </button>
                        <button type="button" class="btn btn-success btn-sm" t-on-click="onCreateEvent">
                            <i class="fa fa-plus"/> New Event
                        </button>
                    </div>
                </div>

                <!-- Content -->
                <div class="o_calendar_content flex-grow-1 overflow-auto">
                    <t t-if="!state.users.length">
                        <div class="alert alert-info m-3 text-center">
                            <i class="fa fa-info-circle me-2"></i>
                            Please select assignees from the filter to view their calendar.
                        </div>
                    </t>
                    <t t-else="">
                        <table class="table table-bordered table-sm mb-0 o_day_calendar_table">
                            <thead class="sticky-top bg-white">
                                <tr>
                                    <th class="text-center time-column">
                                        <small class="text-muted">TIME</small>
                                    </th>
                                    <t t-foreach="state.users" t-as="user" t-key="user.id">
                                        <th class="text-center user-column" t-att-data-user-id="user.id">
                                            <div class="d-flex align-items-center justify-content-center p-2">
                                                <span class="user-color-indicator me-2"
                                                      t-att-style="'background-color: ' + getUserColor(user_index)"/>
                                                <div class="d-flex flex-column">
                                                    <strong t-esc="getUserDisplayName(user.name)"/>
                                                    <small class="text-muted" t-esc="user.email or ''"/>
                                                </div>
                                            </div>
                                        </th>
                                    </t>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="state.timeSlots" t-as="timeSlot" t-key="timeSlot.hour">
                                    <tr class="time-slot-row">
                                        <td class="text-center time-slot-cell">
                                            <small class="text-muted fw-bold" t-esc="timeSlot.label"/>
                                        </td>
                                        <t t-foreach="state.users" t-as="user" t-key="user.id">
                                            <td class="event-slot-cell" t-att-data-slot="timeSlot.hour + '-' + user.id">
                                                <t t-set="slotEvents" t-value="getEventsForSlot(user.id, timeSlot.hour)"/>
                                                <t t-foreach="slotEvents" t-as="event" t-key="event.id">
                                                    <div class="o_calendar_event"
                                                         t-att-style="getEventStyle(event)"
                                                         t-on-click="() => onEventClick(event.id)"
                                                         t-on-mouseover="(ev) => onEventMouseOver(ev, event)"
                                                         t-on-mouseout="(ev) => onEventMouseOut(ev, event)">
                                                        <div class="event-content">
                                                            <div class="event-title" t-esc="event.name"/>
                                                            <div class="event-time" t-esc="getEventTimeRange(event)"/>
                                                        </div>
                                                    </div>
                                                </t>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="week_calendar_template" name="Week Calendar Template">
        <t t-name="CalendarByAssignee.WeekView">
            <div class="o_week_calendar_container h-100 d-flex flex-column">
                <!-- Header -->
                <div class="o_calendar_header d-flex justify-content-between align-items-center p-3 border-bottom bg-light">
                    <div class="d-flex align-items-center">
                        <h4 class="mb-0 fw-bold text-primary">
                            <t t-esc="state.currentWeekLabel"/>
                        </h4>
                        <div class="ms-3 btn-group">
                            <button type="button" class="btn btn-outline-secondary btn-sm" t-on-click="onPreviousWeek">
                                <i class="fa fa-chevron-left"/> Previous
                            </button>
                            <button type="button" class="btn btn-outline-primary btn-sm" t-on-click="onToday">
                                This Week
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" t-on-click="onNextWeek">
                                Next <i class="fa fa-chevron-right"/>
                            </button>
                        </div>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-primary btn-sm" t-on-click="onSwitchToDayView">
                            <i class="fa fa-calendar-day"/> Day View
                        </button>
                        <button type="button" class="btn btn-success btn-sm" t-on-click="onCreateEvent">
                            <i class="fa fa-plus"/> New Event
                        </button>
                    </div>
                </div>

                <!-- Content -->
                <div class="o_calendar_content flex-grow-1 overflow-auto">
                    <t t-if="!state.users.length">
                        <div class="alert alert-info m-3 text-center">
                            <i class="fa fa-info-circle me-2"></i>
                            Please select assignees from the filter to view their calendar.
                        </div>
                    </t>
                    <t t-else="">
                        <table class="table table-bordered table-sm mb-0 o_week_calendar_table">
                            <thead class="sticky-top bg-white">
                                <tr>
                                    <th class="text-center time-column">
                                        <small class="text-muted">TIME</small>
                                    </th>
                                    <t t-foreach="state.weekDays" t-as="day" t-key="day.date">
                                        <th t-att-colspan="state.users.length" class="text-center day-header">
                                            <div class="py-2">
                                                <div class="fw-bold" t-esc="day.name"/>
                                                <small class="text-muted" t-esc="day.date"/>
                                            </div>
                                        </th>
                                    </t>
                                </tr>
                                <tr>
                                    <th class="bg-light"></th>
                                    <t t-foreach="state.weekDays" t-as="day" t-key="day.date">
                                        <t t-foreach="state.users" t-as="user" t-key="user.id">
                                            <th class="text-center user-column">
                                                <div class="d-flex align-items-center justify-content-center p-1">
                                                    <span class="user-color-indicator me-1"
                                                          t-att-style="'background-color: ' + getUserColor(user_index)"/>
                                                    <small class="fw-bold" t-esc="getUserDisplayName(user.name)"/>
                                                </div>
                                            </th>
                                        </t>
                                    </t>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="state.timeSlots" t-as="timeSlot" t-key="timeSlot.hour">
                                    <tr class="time-slot-row">
                                        <td class="text-center time-slot-cell">
                                            <small class="text-muted fw-bold" t-esc="timeSlot.label"/>
                                        </td>
                                        <t t-foreach="state.weekDays" t-as="day" t-key="day.date">
                                            <t t-foreach="state.users" t-as="user" t-key="user.id">
                                                <td class="event-slot-cell"
                                                    t-att-data-slot="day.date + '-' + timeSlot.hour + '-' + user.id">
                                                    <t t-set="slotEvents" t-value="getEventsForSlot(day.date, timeSlot.hour, user.id)"/>
                                                    <t t-foreach="slotEvents" t-as="event" t-key="event.id">
                                                        <div class="o_calendar_event"
                                                             t-att-style="getEventStyle(event)"
                                                             t-on-click="() => onEventClick(event.id)"
                                                             t-on-mouseover="(ev) => onEventMouseOver(ev, event)"
                                                             t-on-mouseout="(ev) => onEventMouseOut(ev, event)">
                                                            <div class="event-content">
                                                                <div class="event-title" t-esc="event.name"/>
                                                                <div class="event-time" t-esc="getEventTimeRange(event)"/>
                                                            </div>
                                                        </div>
                                                    </t>
                                                </td>
                                            </t>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>