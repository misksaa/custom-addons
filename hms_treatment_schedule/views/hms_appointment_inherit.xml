<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Appointment Form View Inherit - Add Treatment Schedule Button -->
    <record id="view_hms_appointment_form_inherit_treatment_schedule" model="ir.ui.view">
        <field name="name">hms.appointment.form.inherit.treatment.schedule</field>
        <field name="model">hms.appointment</field>
        <field name="inherit_id" ref="acs_hms.view_hms_appointment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_print_treatment_schedule_from_appointment" type="object" class="oe_stat_button" icon="fa-calendar-check-o">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Treatment Schedules</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
